<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LockerSavedSongsFragment">

    <CheckBox
        android:id="@+id/locker_saved_songs_select_all_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="전체 선택"
        android:checked="true" 
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locker_saved_songs_play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="전체 듣기"
        android:textColor="?attr/colorPrimary"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        app:layout_constraintStart_toEndOf="@id/locker_saved_songs_select_all_cb"
        app:layout_constraintTop_toTopOf="@id/locker_saved_songs_select_all_cb"
        app:layout_constraintBottom_toBottomOf="@id/locker_saved_songs_select_all_cb"/>

    <Button
        android:id="@+id/locker_saved_songs_edit_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="편집"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/locker_saved_songs_select_all_cb"
        app:layout_constraintBottom_toBottomOf="@id/locker_saved_songs_select_all_cb"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locker_saved_songs_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/locker_saved_songs_select_all_cb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_album_song" />
        <!-- tools:listitem은 적절한 아이템 레이아웃으로 변경 필요 -->

    <TextView
        android:id="@+id/locker_saved_songs_empty_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="저장한 곡이 없습니다."
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/locker_saved_songs_select_all_cb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>
    <!-- 기본적으로 숨김, 리스트가 비었을 때 표시 -->

</androidx.constraintlayout.widget.ConstraintLayout>