<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/item_album_song_track_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorSecondary"
        tools:text="01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_marginEnd="16dp"/>

    <TextView
        android:id="@+id/item_album_song_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="?android:attr/textColorPrimary"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Song Title Here"
        app:layout_constraintStart_toEndOf="@id/item_album_song_track_number_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_album_song_play_btn"
        app:layout_constraintBottom_toTopOf="@+id/item_album_song_artist_tv"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/item_album_song_artist_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="Artist Name"
        app:layout_constraintStart_toEndOf="@id/item_album_song_track_number_tv"
        app:layout_constraintTop_toBottomOf="@id/item_album_song_title_tv"
        app:layout_constraintEnd_toStartOf="@+id/item_album_song_play_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/item_album_song_play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_track_placeholder"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play track"
        app:layout_constraintEnd_toStartOf="@id/item_album_song_more_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>

    <ImageButton
        android:id="@+id/item_album_song_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_placeholder"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="더보기"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>