<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LibraryFragment">

    <!-- Top Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/library_toolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorSurface"
        app:contentInsetStart="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/library_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관함"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="?android:attr/textColorPrimary"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/library_login_btn"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인"
                android:textColor="?attr/colorPrimary"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Tabs -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/library_tab_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabGravity="fill"
        app:tabIndicatorColor="?attr/colorPrimary"
        app:tabSelectedTextColor="?attr/colorPrimary"
        app:tabTextColor="?android:attr/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/library_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controls below Tabs -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/library_controls_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/library_tab_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <CheckBox
            android:id="@+id/library_select_all_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체 선택"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/library_play_all_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="전체 듣기"
            android:gravity="center_vertical"
            android:drawablePadding="4dp"
            android:layout_marginStart="16dp"
            app:drawableStartCompat="@android:drawable/ic_media_play"
            app:layout_constraintTop_toTopOf="@id/library_select_all_cb"
            app:layout_constraintBottom_toBottomOf="@id/library_select_all_cb"
            app:layout_constraintStart_toEndOf="@id/library_select_all_cb" />
            <!-- Consider using a custom vector drawable for play icon for better styling -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/library_edit_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="편집"
            android:textColor="?android:attr/textColorPrimary"
            app:layout_constraintTop_toTopOf="@id/library_select_all_cb"
            app:layout_constraintBottom_toBottomOf="@id/library_select_all_cb"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Content Area (e.g., for RecyclerView of songs) -->
    <FrameLayout
        android:id="@+id/library_content_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/library_controls_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>