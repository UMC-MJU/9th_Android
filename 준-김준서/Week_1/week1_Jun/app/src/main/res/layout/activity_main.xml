<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back_24"/>

    <!-- 중앙 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- 상단 가이드라인 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.07" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Title2 -->
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title2"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/subtitle"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 감정 아이콘 + 텍스트 스택 -->
    <LinearLayout
        android:id="@+id/stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@id/guideline_center_v"
        app:layout_constraintEnd_toEndOf="@id/guideline_center_v">

        <!-- Happy -->
        <ImageView
            android:id="@+id/ivHappy"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_happy"
            android:src="@drawable/emotion_happy"/>
        <TextView
            android:id="@+id/tvHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@color/happy"
            android:text="@string/tv_happy"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Excited -->
        <ImageView
            android:id="@+id/ivExcited"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_excited"
            android:src="@drawable/emotion_excited"/>
        <TextView
            android:id="@+id/tvExcited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@color/excited"
            android:text="@string/tv_excited"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Normal -->
        <ImageView
            android:id="@+id/ivNormal"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_normal"
            android:src="@drawable/emotion_normal"/>
        <TextView
            android:id="@+id/tvNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@color/normal"
            android:text="@string/tv_normal"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Anxious -->
        <ImageView
            android:id="@+id/ivAnxious"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_anxious"
            android:src="@drawable/emotion_anxious"/>
        <TextView
            android:id="@+id/tvAnxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@color/anxious"
            android:text="@string/tv_anxious"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Angry -->
        <ImageView
            android:id="@+id/ivAngry"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_angry"
            android:src="@drawable/emotion_angry"/>
        <TextView
            android:id="@+id/tvAngry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="@color/angry"
            android:text="@string/tv_angry"
            android:textSize="14sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>