<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.08" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오늘 하루는 어땠나요?"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/guideline_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="선택한 감정우표를 기반으로 맞춤형 질문이 배달됩니다"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/stack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        app:layout_constraintStart_toStartOf="@id/guideline_center_v"
        app:layout_constraintEnd_toEndOf="@id/guideline_center_v">

        <ImageView
            android:id="@+id/ivHappy"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_happy"
            android:src="@drawable/emotion_happy"/>
        <TextView
            android:id="@+id/tvHappy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더없이 행복한 하루였어요"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivExcited"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_excited"
            android:src="@drawable/emotion_excited"/>
        <TextView
            android:id="@+id/tvExcited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="들뜨고 흥분돼요"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivNormal"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_normal"
            android:src="@drawable/emotion_normal"/>
        <TextView
            android:id="@+id/tvNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="평범한 하루였어요"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivAnxious"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_anxious"
            android:src="@drawable/emotion_anxious"/>
        <TextView
            android:id="@+id/tvAnxious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생각이 많아지고 불안해요"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/ivAngry"
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cd_angry"
            android:src="@drawable/emotion_angry"/>
        <TextView
            android:id="@+id/tvAngry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분노를 품거나 화가 나요"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>